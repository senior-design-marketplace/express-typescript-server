{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "build",
      "strict": true,
      "removeComments": true,
      "experimentalDecorators": true,
      "noImplicitAny": false, //some generated code produces js which when imported throws 'implicit any' errors
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowJs": true
    },
    "include": [
      "src/**/*"
    ]
  }