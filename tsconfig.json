{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "declaration": true,
      "outDir": "build",
      "strict": true,
      "removeComments": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*"
    ]
  }