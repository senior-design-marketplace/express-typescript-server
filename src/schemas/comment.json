{
    "$id": "http://example.com/schemas/comment.json",
    "title": "Comment",
    "description": "A comment about a project",
    "$ref": "#/definitions/Comment",
    "definitions": {
        "Comment": {
            "type": "object",
            "properties": {
                "author": {
                    "$ref": "user.json#/definitions/User"
                },
                "body": {
                    "description": "The content of the comment",
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 256
                },
                "timestamp": {
                    "description": "When the comment was created",
                    "type": "string",
                    "format": "date-time"
                },
                "parent": {
                    "description": "The comment to which this comment is replying",
                    "$ref": "#/definitions/Comment"
                }
            },
            "required": [
                "body"
            ]
        }
    }
}